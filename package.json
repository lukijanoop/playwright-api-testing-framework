  },
  "bugs": {
    "url": "https://github.com/YOUR_USERNAME/playwright-api-testing-framework/issues"
  },
  "homepage": "https://github.com/YOUR_USERNAME/playwright-api-testing-framework#readme",
  "devDependencies": {
